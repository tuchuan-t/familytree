<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >


<mapper namespace="com.springboot.familytree.mapper.UserMapper">

    <select id="findUserByUserName" resultType="com.springboot.familytree.bean.User">
        select * from user
        <where>
            username = #{username}
        </where>
    </select>


    <insert id="addUser" parameterType="com.springboot.familytree.bean.User">
        insert into user
        <trim prefix="(" suffix=")" suffixOverrides=",">
          <if test="username != null and username != ''">
              username,
          </if>
          <if test="password != null and password !=''">
              password,
          </if>
          <if test="age != null and age !=''">
              age,
          </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="username != null and username != ''">
                #{username},
            </if>
            <if test="password != null and password != ''">
                #{password},
            </if>
            <if test="age != null and age != ''">
                #{age},
            </if>
        </trim>
    </insert>

    <delete id="deleteUser">
        delete from user where
        id = #{id}
    </delete>


    <update id="updateUser">
        update user
        set age = #{age} where id=#{id}
    </update>

</mapper>
